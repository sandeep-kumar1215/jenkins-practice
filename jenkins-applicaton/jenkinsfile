pipeline {
    agent none

    stages {

        stage('Build Backend') {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                dir('jenkins-applicaton/backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Frontend') {
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                dir('jenkins-applicaton/frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Success') {
            agent any
            steps {
                echo "Application Build Successful!"
            }
        }
    }
}