pipeline {
    agent none

    stages {

        stage('Build Backend') {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                dir('backend') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Build Frontend') {
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Docker Build') {
            agent any
            steps {
                sh 'docker build -t campus-study-backend ./backend'
                sh 'docker build -t campus-study-frontend ./frontend'
            }
        }

        stage('Deploy') {
            steps {
                echo "Application deployed successfully!"
            }
        }
    }
}