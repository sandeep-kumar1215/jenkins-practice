pipeline {
    agent none

    stages {
        stage('Build Backend') {
            agent {
                // FIXED: Using Java 17 for Spring Boot 3.2+
                docker { image 'maven:3.9.5-eclipse-temurin-17' }
            }
            steps {
                dir('jenkins-applicaton/backend') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Frontend') {
            agent {
                // UPDATED: Standard Node version for React 18
                docker { image 'node:18-alpine' }
            }
            steps {
                dir('jenkins-applicaton/frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Success') {
            agent any
            steps {
                echo "Campus Study App Build Successful!"
            }
        }
    }
}